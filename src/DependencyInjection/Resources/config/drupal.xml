<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

  <services>

    <!-- Event listeners -->
    <service id="api_platform.route_subscriber" class="Drupal\api_platform\Routing\RouteProviderSubscriber">
      <argument type="service" id="api_platform.metadata.resource.name_collection_factory" />
      <argument type="service" id="api_platform.metadata.resource.metadata_factory" />
      <argument type="service" id="api_platform.operation_path_resolver.custom" />
      <argument type="service" id="service_container" />
      <argument>%api_platform.formats%</argument>
      <argument>%api_platform.resource_class_directories%</argument>
      <argument>%api_platform.enable_entrypoint%</argument>


      <tag name="event_subscriber"/>
    </service>

    <!--    Path processors-->
<!--    <service id="api_platform.path_processor" class="Drupal\api_platform\PathProcessor\PathProcessor">-->
<!--      <tag name="path_processor_outbound" priority="400"/>-->
<!--    </service>-->

  </services>

</container>
