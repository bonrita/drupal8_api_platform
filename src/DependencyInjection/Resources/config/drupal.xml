<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

  <services>

    <!-- Event listeners -->
    <service id="api_platform.route_subscriber" class="Drupal\api_platform\Routing\RouteProviderSubscriber">
      <argument type="service" id="api_platform.metadata.resource.name_collection_factory" />
      <argument type="service" id="api_platform.metadata.resource.metadata_factory" />
      <argument type="service" id="api_platform.operation_path_resolver.custom" />
      <argument type="service" id="service_container" />
      <argument type="service" id="api_platform.resource_class_resolver"  />
      <argument>%api_platform.formats%</argument>
      <argument>%api_platform.resource_class_directories%</argument>
      <argument>%api_platform.enable_entrypoint%</argument>


      <tag name="event_subscriber"/>
    </service>

    <service id="api_platform.property_info_entity_extractor" class="Drupal\api_platform\PropertyInfo\Extractor\EntityExtractor">
      <argument type="service" id="entity_type.manager" />
      <argument type="service" id="entity_type.repository" />
      <argument type="service" id="entity_field.manager" />
      <argument type="service" id="plugin.manager.field.field_type" />
      <argument type="service" id="api_platform.resource_class_resolver" />

      <tag name="property_info.list_extractor"/>
      <tag name="property_info.type_extractor" />
      <tag name="property_info.access_extractor" />
    </service>

    <service id="api_platform.doctrine.orm.default.item_data_provider" class="Drupal\api_platform\Core\DataProvider\Drupal\ItemDataProvider">
      <argument type="service" id="api_platform.resource_class_resolver" />
      <argument type="service" id="entity_type.manager" />

      <tag name="api_platform.item_data_provider" />
    </service>

    <service id="api_platform.doctrine.orm.default.collection_data_provider" class="Drupal\api_platform\Core\DataProvider\Drupal\CollectionDataProvider">
      <argument type="service" id="api_platform.resource_class_resolver" />
      <argument type="service" id="entity_type.manager" />

      <tag name="api_platform.collection_data_provider" />
    </service>

    <!--    Path processors-->
<!--    <service id="api_platform.path_processor" class="Drupal\api_platform\PathProcessor\PathProcessor">-->
<!--      <tag name="path_processor_outbound" priority="400"/>-->
<!--    </service>-->

  </services>

</container>
