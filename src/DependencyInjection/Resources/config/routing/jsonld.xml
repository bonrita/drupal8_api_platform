<?xml version="1.0" encoding="UTF-8" ?>

<routes xmlns="http://symfony.com/schema/routing"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://symfony.com/schema/routing
        http://symfony.com/schema/routing/routing-1.0.xsd">

    <route id="api_platform.api_jsonld_context" path="/api/contexts/{shortName}">
<!--    <route id="api_platform.api_jsonld_context" path="/api/contexts/{shortName}.{_format}">-->
        <default key="_controller">api_platform.jsonld.action.context</default>
        <default key="_format">jsonld</default>
        <default key="_api_respond">true</default>

        <requirement key="_access">TRUE</requirement>
        <requirement key="shortName">.+</requirement>
        <requirement key="index">.+</requirement>
    </route>

</routes>
